{
  "name": "docker-linter",
  "displayName": "Dockerfile Linter",
  "description": "Real-time Dockerfile linting with best practice checks",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:dockerfile"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "docker-linter.runLint",
      "title": "Lint Dockerfile"
    }],
    "configuration": {
      "title": "Docker Linter",
      "properties": {
        "dockerLinter.severityLevels": {
          "type": "object",
          "default": {
            "CRITICAL": "error",
            "HIGH": "error", 
            "MEDIUM": "warning",
            "LOW": "information"
          },
          "description": "Configure severity level mappings"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
